<h1 class="text-center mt-3">All Articles</h1>
<div class="container">
  <% @articles.each do |article| %>
    <div class="mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          by <%= article.user.username %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to article.title, article_path(article.id), class: "text-success"%></h5>
          <p class="card-text"><%= truncate(article.description, length: 150) %></p>
          <%= link_to "View", article_path(article.id), class: "btn btn-outline-success"%>
          <%= link_to "Edit", edit_article_path(article.id), class: "btn btn-outline-success"%>
          <%= link_to 'Delete', article_path(article.id), method: :delete,  data: { confirm: "Are you Sure? "}, class: "btn btn-outline-success"  %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(article.created_at) %> ago,
          edited <%=time_ago_in_words(article.updated_at)%> ago </small>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Create new article', new_article_path %>
<%= render 'layouts/footer' %>
