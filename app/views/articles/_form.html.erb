<div class="container">
  <% if @article.errors.any? %>
    <h2> Sorry! The following errors must be fixed. </h2>
    <ul>
      <% @article.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row justify-content-center">
      <div class="col-10">
        <%= form_with(model: @article, class: "shadow p-3 mb-4 bg-dark rounded", local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :title, class: "col-2 col-form-label text-white" %>
            <div class="col-10">
              <%= f.text_field :title, class: "form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :description, class: "col-2 col-form-label text-white" %>
            <div class="col-10">
              <%= f.text_area :description, rows: 10, class: "form-control" %>
            </div>
          </div>
          <div class="form-group row justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-lg" %> <!--no comma needed for submit button!-->
          </div>
        <% end %>
    <div>
      <%= link_to 'Cancel (back to articles)', articles_path, class: "text-info" %>
    </div>
  </div>
</div>
