<h1> Edit your article </h1>
<% if @article.errors.any? %>
  <h2> Sorry! The following errors must be fixed before editing an article. </h2>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with(model: @article, local: true) do |f| %>
  <p> 
    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
  </p>
  <p> 
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
  </p>
  <p> 
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Cancel and return to all articles', articles_path %>
