<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class: "shadow p-3 mb-4 bg-dark rounded", local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :name, "Category name", class: "col-2 col-form-label text-white" %>
    <div class="col-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter a category" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <%= f.submit class: "btn btn-outline-light btn-lg" %> 
  </div>
<% end %>