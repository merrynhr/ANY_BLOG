<div class="container">
  <div class="row justify-content-center">
      <div class="col-10">
        <%= render 'shared/errors' %>
        <%= form_with(model: @user, class: "shadow p-3 mb-4 bg-dark rounded", local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :username, class: "col-2 col-form-label text-white" %>
            <div class="col-10">
              <%= f.text_field :username, class: "form-control", placeholder: "Enter a username" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :email, class: "col-2 col-form-label text-white" %>
            <div class="col-10">
              <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :password, class: "col-2 col-form-label text-white" %>
            <div class="col-10">
              <%= f.password_field :password, class: "form-control", placeholder: "Enter a password" %>
            </div>
          </div>
          <div class="form-group row justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-lg" %> <!--no comma needed for submit button!-->
          </div>
        <% end %>
    <div>
      <%= link_to 'Cancel (back to articles)', articles_path, class: "text-info" %>
    </div>
  </div>
</div>

